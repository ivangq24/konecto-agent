# =============================================================================
# Konecto AI Agent - Environment Configuration
# =============================================================================
# Copy this file as .env and fill in your actual secrets and runtime settings
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
APP_NAME="Konecto AI Agent"
APP_VERSION=1.0.0
DEBUG=false

# -----------------------------------------------------------------------------
# OpenAI Configuration
# -----------------------------------------------------------------------------
# Required: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# OpenAI Model Configuration
# Options: gpt-4.1-mini, gpt-4.1
OPENAI_MODEL=gpt-4.1-mini

# Embedding Model Configuration
# Options: text-embedding-3-small, text-embedding-3-large, text-embedding-ada-002
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# -----------------------------------------------------------------------------
# Google Generative AI Configuration
# For PDF processing / ingest pipeline
# Create at: https://makersuite.google.com/app/apikey
# -----------------------------------------------------------------------------
GOOGLE_API_KEY=

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Supported options: sqlite, chroma, memory
DATA_STORAGE=sqlite

# SQLite Database Path
SQLITE_DB_PATH=data/processed/actuators.db

# ChromaDB Persistence Directory
CHROMA_PERSIST_DIRECTORY=data/processed/chroma

# -----------------------------------------------------------------------------
# Data Paths
# -----------------------------------------------------------------------------
RAW_DATA_PATH=data/raw
PROCESSED_DATA_PATH=data/processed

# -----------------------------------------------------------------------------
# Agent Configuration
# -----------------------------------------------------------------------------
AGENT_TEMPERATURE=0.0
AGENT_MAX_ITERATIONS=3
AGENT_VERBOSE=false

# -----------------------------------------------------------------------------
# Langfuse Observability Configuration
# -----------------------------------------------------------------------------
LANGFUSE_ENABLED=true

# Langfuse API Keys (Settings â†’ API Keys)
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=

# Langfuse Host URL
# Default global: https://cloud.langfuse.com
# US region: https://us.cloud.langfuse.com
LANGFUSE_HOST=https://us.cloud.langfuse.com